<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.doudou.bill.orm.dao.UserDao">
 


  <select id="getUserById" resultType="com.doudou.bill.orm.model.User" parameterType="java.lang.String">
   	select
   	*
   	from m_user
   	where
    user_id = #{userId}
  </select>

	<insert id="insertUser" parameterType="com.doudou.bill.common.dto.UserDto">
		insert into m_user(
		user_id,login_name,phone,password,create_time,update_time)
		values (
		#{userId},#{loginName},#{phone},#{password},#{createTime},#{updateTime})
	</insert>

	<delete id="deleteUserById" parameterType="java.lang.String">
		delete from
		m_user
		where
		user_id = #{userId}
	</delete>

</mapper>